{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server"],
      "env": {
        "SUPABASE_DB_URL": "${SUPABASE_DB_URL}",
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}"
      },
      "description": "Supabase MCP — queries, migrations, RLS"
    },
    "expo-mcp": {
      "url": "https://mcp.expo.dev/mcp",
      "description": "Expo MCP — EAS Build, submit, docs"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Documentacao atualizada de bibliotecas"
    },
    "xcode-mcp": {
      "command": "npx",
      "args": ["-y", "xcodebuildmcp@latest"],
      "description": "Xcode — simuladores, projetos iOS (macOS only)"
    },
    "react-native-guide": {
      "command": "npx",
      "args": ["-y", "@mrnitro360/react-native-mcp-guide@1.1.0"],
      "description": "Guia MCP para fluxos React Native"
    },
    "rn-debugger": {
      "command": "npx",
      "args": ["-y", "@twodoorsdev/react-native-debugger-mcp"],
      "description": "Depuracao MCP para React Native"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Raciocinio sequencial para tarefas complexas"
    },
    "github-readonly": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub MCP read-only"
    },
    "memory-keeper": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MCP_MEMORY_DB_PATH": ".claude/context.db"
      },
      "description": "Persistencia de contexto entre sessoes"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "description": "Automacao de browser para testes visuais"
    },
    "figma-devmode": {
      "url": "http://127.0.0.1:3845/sse",
      "description": "Figma Dev Mode MCP (opcional — precisa Figma desktop)"
    }
  }
}
