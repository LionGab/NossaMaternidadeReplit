      "label": "Clean All Caches",
      "type": "shell",
      "command": "npm run clean",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build iOS Preview",
      "type": "shell",
      "command": "npm run build:preview:ios",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
