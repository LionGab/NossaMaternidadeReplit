{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Quality Gate",
      "type": "shell",
      "command": "npm run quality-gate",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "TypeCheck",
      "type": "shell",
      "command": "npm run typecheck",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Expo",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Expo (Optimized)",
      "type": "shell",
      "command": "set EXPO_NO_METRO_LAZY=true && set EXPO_METRO_MAX_WORKERS=4 && npm start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Clean All Caches",
      "type": "shell",
      "command": "npx expo start --clear && npm cache clean --force && rd /s /q node_modules\\.cache",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build iOS Preview",
      "type": "shell",
      "command": "npm run build:preview:ios",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build Android Preview",
      "type": "shell",
      "command": "npm run build:preview:android",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build Both Platforms (Parallel)",
      "type": "shell",
      "command": "start /b npm run build:preview:ios && npm run build:preview:android",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Performance Profile (Bundle Analyzer)",
      "type": "shell",
      "command": "npx expo export --dump-sourcemap && echo Bundle size analysis complete. Check dist folder.",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Update Dependencies",
      "type": "shell",
      "command": "npm update && npm audit fix",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
