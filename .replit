modules = ["nodejs-20", "python-3.12", "bash", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web"

[[workflows.workflow]]
name = "Expo Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "HOST=0.0.0.0 REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0 WEB_HOST=0.0.0.0 npx expo start --web --port 5000 --host lan --clear"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8081
externalPort = 8081

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-l", "5000"]
build = ["npx", "expo", "export", "--platform", "web"]
